package com.chainsys.crudproject.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.chainsys.crudproject.dto.UserDTO;
import com.chainsys.crudproject.entity.User;
import com.chainsys.crudproject.repository.UserRepository;
@Service("userService")
public class UserServiceImpl implements UserService {

	@Autowired
	UserRepository userRepository;
	
	@Override
	public UserDTO getUserDetails(Integer userId) {
		Optional<User> user =userRepository.findById(userId);
		User userEntity = user.get();
		UserDTO userDTO = new UserDTO();
		userDTO.setCity(userEntity.getCity());
		userDTO.setPassword(userEntity.getPassword());
		userDTO.setPhoneNo(userEntity.getPhoneNo());
		userDTO.setUserId(userEntity.getUserId());
		userDTO.setUserName(userEntity.getUserName());
		
		return userDTO;
	}

}
